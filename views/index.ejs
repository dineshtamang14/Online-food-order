    <!-- order section start  -->
    <section class="order" id="order">
        <h1 class="heading"><span>Order</span>Now</h1>
        <div class="row">
            <div class="image">
                <img src="images/order-img.jpg" alt="">
            </div>


            <div>
                <div class="inputBox">
                    <input type="text" placeholder="name">
                    <input type="email" placeholder="email">
                </div>
                <div class="inputBox">
                    <input type="number" placeholder="number">
                    <select class="select">
                        <option disabled selected>Chose a meal</option>
                        <option value="Burgurs">Burgurs</option>
                        <option value="Sweets">Sweets</option>
                        <option value="cupcakes">cupcakes</option>
                        <option value="Pakodas">Pakodas</option>
                        <option value="Sandwiche">Sandwiche</option>
                        <option value="Frankies">Frankies</option>
                        <option value="rolls">rolls</option>
                    </select>
                </div>
                <textarea placeholder="address" name="" id="" cols="30" rows="10"></textarea>

                <div class="checkout">
                <!-- Load Stripe.js on your website. -->
                <form action="/payment" method="POST">
                    <script src="//checkout.stripe.com/v2/checkout.js" class="stripe-button" data-key="<%= key %>" data-amount="19900.99"
                        data-currency="inr" data-name="Order Meals" data-description="Meal Name: Frankies & rolls"
                        data-locale="auto">
